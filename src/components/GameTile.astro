---
import { Image } from "astro:assets";
interface Props {
  image: ImageMetadata;
  title: string;
  button: {
    label: string;
    href: string;
  };
}

const { image, title, button } = Astro.props;
---

<li class="tile">
  <Image src={image} alt="" width="320" height="240" />
  <div class="tile__description">
    <h3>{title}</h3>
    <a href={button.href}>{button.label}</a>
  </div>
</li>
